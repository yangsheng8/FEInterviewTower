---
import type { CollectionEntry } from "astro:content";
import Tags from "./Tags.astro";

const { article } = Astro.props;

interface Props {
  article: CollectionEntry<'blog'>;
}
---


<div class="border border-gray-900 rounded-lg transition flex items-center">
  <a href={'/articles/' + article.slug} class="flex-grow block p-2  hover:text-orange-400">
    <h3 class="text-1xl font-semibold">
      {article.data.title}
    </h3>
  </a>
  <div>
    <Tags tags={article.data.tags} />
  </div>
</div>