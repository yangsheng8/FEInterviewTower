---
import Layout from "~/layouts/Layout.astro"
import Container from "~/components/Container.astro"
import Tags from "~/components/Tags.astro";
import { getEntry } from 'astro:content';
import { formatDate } from "~/utils/utils";

const { slug } = Astro.params;

if(slug === undefined) {
  throw new Error('Slug is required');
}

const entry = await getEntry('blog', slug);

if(entry === undefined) {
  return Astro.redirect('/404');
}

const { Content } = await entry.render();
---

<Layout>
    <Container>
  <a href="javascript:history.back()" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-pink-900 hover:text-white">返回上一层</a>
  <article>
    <h1 class="text-4xl font-bold mb-2"> {entry.data.title}</h1>
    <h3 class="text-lg mb-2">更新时间：{formatDate(entry.data.pubDate)}</h3>
    <Tags tags={entry.data.tags} />
    <Content />
  </article>
  </Container>
</Layout>